<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddInteraction"
        android:stretchColumns="1"
>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/type_input_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textType"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/meeting_input_invitation"
                android:ems="10"
                android:id="@+id/editType"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/date_input_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textDate"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editDate" android:text="@string/default_date"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/persons_input_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textPersons"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/default_persons"
                android:ems="10"
                android:id="@+id/editPersons"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/comment_input_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textComment"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editComment" android:text="@string/default_meeting_comment"/>
    </TableRow>
</TableLayout>